<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="497.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.job_agency.ViewCandidateDetails">

    <Label layoutX="332.0" layoutY="25.0" text="View Candidate Details" />

    <Label layoutX="30" layoutY="70" text="Search by Candidate ID" />
    <TextField fx:id="searchCandidateIdField" layoutX="193.0" layoutY="70.0" prefWidth="200" promptText="Enter Candidate ID" />

    <Button fx:id="searchButton" layoutX="468.0" layoutY="70.0" prefWidth="100" text="Search" />

    <Label layoutX="30" layoutY="120" text="Candidate Details" />
    <TableView fx:id="candidateTableView" layoutX="30" layoutY="140" prefHeight="300" prefWidth="740">
        <columns>
            <TableColumn fx:id="candidateIdColumn" prefWidth="120" text="Candidate ID" />
            <TableColumn fx:id="nameColumn" prefWidth="160" text="Name" />
            <TableColumn fx:id="ageColumn" prefWidth="120" text="Age" />
            <TableColumn fx:id="qualificationColumn" prefWidth="160" text="Qualification" />
            <TableColumn fx:id="skillsColumn" prefWidth="120" text="Skills" />
            <TableColumn fx:id="experienceColumn" prefWidth="120" text="Experience (Years)" />
        </columns>
    </TableView>

</AnchorPane>
