<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="862.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.job_agency.ViewCandidateDetails">
    <Label layoutX="292.0" layoutY="14.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="View Candidate Applications" />

    <Button layoutX="20.0" layoutY="60.0" onAction="#loadCandidateDetails" text="Load Candidate Details" />

    <TableView fx:id="candidateTable" layoutX="20.0" layoutY="100.0" prefHeight="350.0" prefWidth="820.0">
        <columns>
            <TableColumn fx:id="jobTitleColumn" prefWidth="150.0" text="Job Title" />
            <TableColumn fx:id="candidateNameColumn" prefWidth="200.0" text="Candidate Name" />
            <TableColumn fx:id="qualificationsColumn" prefWidth="200.0" text="Qualifications" />
            <TableColumn fx:id="skillsColumn" prefWidth="150.0" text="Skills" />
            <TableColumn fx:id="experienceColumn" prefWidth="150.0" text="Experience" />
        </columns>
    </TableView>
</AnchorPane>
